<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/r_iconn"
        android:layout_width="250dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/gold_trans"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/r_iconn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:drawableLeft="@drawable/email"
        android:drawableStart="@drawable/email"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/register_email"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:hint="Password"
        android:drawableLeft="@drawable/password"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        android:drawableStart="@drawable/password" />

    <EditText
        android:id="@+id/register_conform_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:hint="Conform password"
        android:drawableLeft="@drawable/password"
        android:inputType="textPassword"
        android:autofillHints=""
        android:drawableStart="@drawable/password" />

    <Button
        android:id="@+id/register_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/register_conform_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="create account"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:textSize="20sp"
        android:textColor="#D4AF37"/>

</RelativeLayout>